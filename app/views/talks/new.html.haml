#talk.container
  .row
    .span12
      - model_class = Talk
      %h1 Interested in speaking?
      %p Please fill out this form, and a group leader will get back to you as soon as possible.
  .row
    .span7
      = simple_form_for @talk, :html => {:class => 'form-horizontal'} do |f|
        .fieldset
          %legend ATLRUG Talk Proposal
          - if flash[:alert]
            %p.alert.alert-error
              %a.close{"data-dismiss" => "alert"}&times;
              = flash[:alert]

          = f.input :title

          = f.input :description, :input_html => { :rows => 4 }

          = f.input :duration, :label => "Duration (minutes)", :hint  => "Just estimate. Most talks are 15-30 minutes.", :input_html => { :step => 5, :min => 0 }

          = f.input :email
          = f.input :twitter, :wrapper => :prepend, :label => "* Twitter Username" do
            = content_tag :span, "@", :class => "add-on"
            = f.input_field :twitter, :class => 'input-medium'

          .form-actions
            = f.button :submit, "Submit Proposal", :class => "btn-info btn-large"
    .span5
      = image_tag "atl_meetup2.jpg", :alt => "Give a Talk", :class => "thumbnail"
