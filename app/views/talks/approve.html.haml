- model_class = Talk
.page-header
  %h1 Approve Talks
%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Description
      %th Duration
  %tbody
    - @talks.each do |talk|
      %tr
        %td= talk.title
        %td= talk.description 
        %td= talk.duration 
        %td
          = link_to "Approve", accept_talk_path(talk), :method => :put, :class => "btn" 
